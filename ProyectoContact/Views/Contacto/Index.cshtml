@model List<ProyectoContact.Models.Contacto>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" style="margin-top:38px">
    
    <div class="col-sm-12">
        <div class="panel-body panel-warning">
            <div class="panel-heading">
                
                <h4>lista de contactos</h4>
            </div>
            <div class="panel-body">
                <a class="btn btn-success" href="@Url.Action("Registrar","Contacto")">Crear Nuevo </a>
                <hr />
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Nombre</th>
                                <th>Apellido</th>
                                <th>Telefono</th>
                                <th>Correo</th>
                                <th style="width:150px"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (ProyectoContact.Models.Contacto item in Model)
                                {
                                  <tr>
                                      <td>@item.Nombre</td>
                                      <td>@item.Apellido</td>
                                      <td>@item.Telefono</td>
                                      <td>@item.Correo</td>
                                      <td>
                                          <a class="btn btn-outline-primary btn-sm" href="@Url.Action("Editar","Contacto",  new{ idcontacto = item.IdContacto})"><i class="fa-solid fa-wrench"></i>Editar</a>
                                        </td>
                                      <td>
                                          <a class="btn btn-outline-danger btn-sm" href="@Url.Action("Eliminar","Contacto",  new{ idcontacto = item.IdContacto})"><i class="fa-solid fa-trash-can"></i>Borrar </a>
                                      </td>
                                  </tr>                          
                                }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


